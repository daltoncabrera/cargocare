@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="login-box">
<div class="login-box-body">
    <form class="login-form row" asp-controller="Manage" asp-action="ChangePassword" method="post">
        <div class="col-sm-12 header">
            <img src="images/logoMd2.png" alt="" class="">
            <p class="">@ViewData["Title"]</p>
        </div>

        <div class="col-sm-12 body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control"/>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control"/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Cambiar Clave</button>

                <a href="/" id="forget-password" class="btn btn-warning">Cancel?</a>
            </div>
        </div>
    </form>

</div>
</div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
